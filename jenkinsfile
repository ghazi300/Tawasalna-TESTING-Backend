pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'develop', url: 'https://github.com/ghazi300/Tawasalna-TESTING-Backend.git'
            }
        }

        stage('Compile & Install') {
            steps {
                sh 'mvn clean compile'
                sh 'ls -R target' // Vérifie la présence du répertoire target
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'scanner'
                    withSonarQubeEnv {
                        sh "${scannerHome}/bin/sonar-scanner -Dsonar.java.binaries=target/classes -X"
                    }
                }
            }
        }
    }
}